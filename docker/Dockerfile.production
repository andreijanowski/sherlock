FROM node:10-alpine

ENV APP_HOME /app
ENV PATH $PATH:$APP_HOME/node_modules/.bin
ENV PUBLIC_API_URL $PUBLIC_API_URL
ENV PUBLIC_GOOGLE_MAPS_API_KEY $PUBLIC_GOOGLE_MAPS_API_KEY
ENV PUBLIC_FACEBOOK_APP_FIELDS $PUBLIC_FACEBOOK_APP_FIELDS
ENV PUBLIC_FACEBOOK_APP_ID $PUBLIC_FACEBOOK_APP_ID

RUN env

## Copy build/ folder to new image
ADD . $APP_HOME
WORKDIR $APP_HOME

RUN yarn install
RUN yarn build
EXPOSE 3000
CMD ["yarn", "start"]
